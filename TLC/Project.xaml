<Page x:Class="TLC.Project"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TLC"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Project">

    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="15"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Width="60" Click="Main_p">Main</Button>
            <Button Width="60" Click="Elements_p">Content</Button>
            <Button Width="60"></Button>
            <Button Width="60"></Button>
        </StackPanel>
        <TextBlock x:Name="URL" Text="URL" Grid.Row="1"></TextBlock>
        <Frame Grid.Row="2" x:Name="Pages"></Frame>
    </Grid>
</Page>
