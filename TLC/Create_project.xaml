<Page x:Class="TLC.Create_project"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TLC"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Create_project">

    <Grid Background="AliceBlue">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="330" Height="390" Background="LightGray">
            <Button Click="Image_select" Width="50" Height="50" Margin="0,10,0,0">
                <Image Source="Default.png" Stretch="UniformToFill" Name="img"></Image>
            </Button>
            <TextBlock Margin="5,5,5,0">ModName</TextBlock>
            <TextBox x:Name="modName" Height="30" Margin="5,0,5,5">123</TextBox>
            <TextBlock Margin="5,5,5,0">ModDisplayName</TextBlock>
            <TextBox x:Name="modDisplayName" Height="30" Margin="5,0,5,5">123</TextBox>
            <TextBlock Margin="5,5,5,0">ModAuthor</TextBlock>
            <TextBox x:Name="modAuthor" Height="30" Margin="5,0,5,5">123</TextBox>
            <TextBlock Margin="5,5,5,0">Description</TextBlock>
            <TextBox x:Name="description" Height="30" Margin="5,0,5,5">123</TextBox>
            <TextBlock Margin="5,5,5,0">Directory</TextBlock>
            <Button x:Name="dir" Height="30" Margin="5,0,5,5" Click="Dir_select">С:\\</Button>
            <TextBlock Margin="5,5,5,0">Tags</TextBlock>
            <TextBox Margin="5,0,5,5">123</TextBox>
        </StackPanel>
        <Button Content="Create" Click="Create" Width="40" Height="20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,15,15"></Button>
        <Button Content="Cancel" Click="Cancel" Width="40" Height="20" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="15,0,0,15"></Button>
    </Grid>
</Page>
